<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/background123">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/maintitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/deliver_jua"
            android:text="복지서비스"
            android:layout_marginBottom="15dp"
            android:textSize="50dp"
            android:textAlignment="center"
            android:textColor="#5A2D1F"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_shape_main"

        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/OldPNG"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/old"></ImageView>

            <ImageView
                android:id="@+id/ChildPNG"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/child"></ImageView>

            <ImageView
                android:id="@+id/WomanFamilyPNG"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/womenfamily"></ImageView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/oldtext"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="어르신"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/childtext"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="어린이 / 청소년"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/womanfamilytext"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="여성 / 가족"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="#755950" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/HandicappPNG"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/handicapp"></ImageView>

            <ImageView
                android:id="@+id/IniformationPNG"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/information"></ImageView>

            <ImageView
                android:id="@+id/MedicalPNG"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/medical"></ImageView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/handicapptext"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="장애인"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/informationtext"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="사업 안내"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/medicaltext"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보건"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="#755950" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/locationPNG"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/location"></ImageView>

            <ImageView
                android:id="@+id/CoronaPNG"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/corona"></ImageView>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"></ImageView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/locationtext"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="사회 복지\n시설지도"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/coronatext"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="코로나-19\n바이러스"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"></TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>