<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/background123">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/maintitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/deliver_jua"
            android:text="평생학습"
            android:layout_marginBottom="15dp"
            android:textSize="50dp"
            android:textAlignment="center"
            android:textColor="#5A2D1F"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_shape_main"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/office"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/officepng"></ImageView>

            <ImageView
                android:id="@+id/teacher"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/teacherpng"></ImageView>

            <ImageView
                android:id="@+id/circles"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/circles"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/officetxt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="기관"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#000000"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/teachertxt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="강사"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/circlestxt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="동아리"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
            android:background="#755950" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/education"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/educationpng"></ImageView>

            <ImageView
                android:id="@+id/document"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/documentpng"></ImageView>

            <ImageView
                android:id="@+id/news"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/newspng"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/educationtxt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="문해교육"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/documenttxt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="자료마당"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/newstxt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="평생학습소식"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
            android:background="#755950" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/agency"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/agencypng"></ImageView>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                ></ImageView>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/agencytxt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="평생학습관"
                android:textSize="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/deliver_jua"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"></TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>